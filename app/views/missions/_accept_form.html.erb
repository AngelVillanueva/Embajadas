<% if assignment.empty? %>
  <% the_action = 'create' %>
  <% the_method = 'post' %>
  <% the_warning = nil %>  
  <% the_input_id = 'accept_mission' %>
  <% the_input_value = t('Accept Mission') %>
<% else %>
  <% the_action = 'destroy' %>
  <% the_method = 'delete' %>
  <% the_warning = t('Are you sure?') %>
  <% the_input_id = 'reject_mission' %>
  <% the_input_value = t("Reject Mission") %>
<% end %>



<%= simple_form_for @assignment, html: {class: 'partial'}, url: url_for(action: the_action, controller: 'assignments'), method: the_method do |f| %>
  
  <%= f.input :mission, as: :hidden, input_html: {value: mission.tracking_id} %>

  <%= f.button :submit, id: the_input_id, value: the_input_value, confirm: the_warning, class: "btn btn-#{the_action}" %>
  
<% end%>
