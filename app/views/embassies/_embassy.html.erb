<li class="embassy span4 offset<%= ( embassies_count > 1 && 0) || 1 %>">
  <article>
    <hgroup>
      <h1>
        <%= link_to embassy do %>
        <% "<i class='icon-flag'></i>#{embassy.name}".html_safe %>
        <% end %>
      </h1>
      <h2><%= t("Active Missions") + ": " + embassy.missions.size.to_s %></h2>
    </hgroup>
    <%= render 'ambassadors/ambassador_performance', embassy: embassy %>
  </article>
</li>